{
    "manifest_version": 2,
    "name": "Zoom Toggler",
    "version": "0.0.1",
    "description": "Quickly toggle browser page zoom between two levels",
    "permissions": [
        "storage",
        "tabs"
    ],
    "options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
